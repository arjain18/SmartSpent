@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <hr />
    <h3> Total expenses @ViewBag.Expenses</h3>
    <br />
    <table class="table"
        <thead>
            <tr>
                <th>
                    Id
                </th>
                                <th>
                    Value                </th>
                                <th>
                    Description
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var expense in Model)
                {
                    <td>@expense.Id</td>
                    <td>@expense.Value</td>
                    <td>@expense.Description</td>
                    <td><a asp-action="CreateEditExpense" asp-route-itemid="@expense.Id">Edit</a>
                    <a asp-action="DeleteExpense" asp-route-itemid="@expense.Id">Delete</a></td>
                }
            }
        </tbody>
</div>